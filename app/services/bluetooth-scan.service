#!/bin/ash

if [ "`cat /app/data/.env`" != "prod" ]; then
  exit 0
fi

hciconfig hci0 down
hciconfig hci0 up
hciconfig hci0 reset

while [ 1 = 1 ]; do
	cd /app/modules/bluetooth-scan

	# Launch scanner
	ash bluetooth-scan.sh

    echo " > Service stopped, restarting in 5 seconds..."
    sleep 5s
done
