#!/bin/ash

while [ 1 = 1 ]; do
  if [ "$APP_ENV" == "dev" ]; then
    clear

    echo " > Building..."
    cd /app/modules/core
    go get -d ./... && \
    go build -ldflags "-s -w" src/telegram-bot.go && \
      /app/modules/core/telegram-bot

    echo " > Hit ENTER!"
    read
  else
    /app/modules/core/telegram-bot

    echo " > Service stopped, restarting in 5 seconds..."
    sleep 5s
  fi
done
